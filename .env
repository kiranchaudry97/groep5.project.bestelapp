APP_DEBUG=true
APP_URL=http://localhost

APP_LOCALE=nl
APP_FALLBACK_LOCALE=nl
APP_FAKER_LOCALE=nl_BE

APP_MAINTENANCE_DRIVER=file
# APP_MAINTENANCE_STORE=database

PHP_CLI_SERVER_WORKERS=4

BCRYPT_ROUNDS=12

LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# ✅ Database (SQLite actief)
DB_CONNECTION=sqlite
DB_DATABASE=./database/database.sqlite
# Alternatief als je absoluut pad nodig hebt:
# DB_DATABASE=/absolute/path/to/your/project/database/database.sqlite

# ✅ Sessies in database (stabieler dan file/cookie)
SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
# SESSION_DOMAIN is bewust UITGEZET voor lokaal gebruik

# Queue / Cache
QUEUE_CONNECTION=database
CACHE_STORE=database

# Storage / Bestandssysteem
FILESYSTEM_DISK=local

#  Broadcasting & Events
BROADCAST_CONNECTION=log

#  Redis (indien ooit gebruikt)
REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

# Mail via log (geen echte e-mails, handig voor ontwikkeling)
MAIL_MAILER=log
MAIL_HOST=127.0.0.1
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_FROM_ADDRESS="hello@example.com"
MAIL_FROM_NAME="${APP_NAME}"

# AWS (niet nodig lokaal, maar laat leeg voor compatibiliteit)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

# Frontend via Vite
